/* 文章 */
.body{
  background-color: #f2f2f2;
}
.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}
.post-date{
  font-size: 28rpx;
   vertical-align: middle;
   margin-left: 30rpx;
   color: #666;
}
.post-title{
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  margin-left: 15rpx;
  margin-bottom: 25rpx;
}
.post-image{
  height: 344rpx;
  width: 100%;
}
.post-content{
   color: #666;
   font-size: 28rpx;
   margin-top: 20rpx;
   margin-left: 10rpx;
   letter-spacing: 2rpx;
}
.post-like{
  font-size: 20rpx;
  flex-direction: row;
  line-height: 20rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  padding: 15rpx 0;
}
.post-like-icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20rpx;
  color: #666;
}
.block{
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}